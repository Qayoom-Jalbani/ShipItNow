<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp">

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/cost"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_background"
                android:hint="Full Name"
                android:padding="10dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/edittext_background"
                android:hint="Email Address"
                android:inputType="textEmailAddress"
                android:padding="10dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/name" />

            <EditText
                android:id="@+id/number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/edittext_background"
                android:hint="Phone Number"
                android:inputType="numberDecimal"
                android:padding="10dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/email" />

            <EditText
                android:id="@+id/company"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/edittext_background"
                android:hint="Company Name"
                android:inputType="numberDecimal"
                android:padding="10dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/number" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/files"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:background="@drawable/ic_item_shape"
                android:padding="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/company"
                app:layout_constraintBottom_toBottomOf="parent">

                <TextView
                    android:id="@+id/dec"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/filemust"
                    android:textAlignment="center"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/uploadfile"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:background="@null"
                    android:drawableLeft="@drawable/ic_add"
                    android:text="Upload File"
                    android:textSize="10sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/deleteAll"
                    app:layout_constraintTop_toBottomOf="@+id/dec" />

                <Button
                    android:id="@+id/deleteAll"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:background="@null"
                    android:drawableLeft="@drawable/ic_delete"
                    android:text="Delete All"
                    android:textSize="10sp"
                    app:layout_constraintLeft_toRightOf="@+id/uploadfile"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/dec" />

                <LinearLayout
                    android:id="@+id/file1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/item_shape_background"
                    android:gravity="center"
                    android:visibility="gone"
                    android:orientation="horizontal"
                    android:padding="6dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/uploadfile">

                    <ImageView
                        android:id="@+id/f_icon1"
                        android:layout_width="45dp"
                        android:layout_height="40dp"
                        android:src="@drawable/pdf" />

                    <TextView
                        android:id="@+id/f_name1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:maxLines="2"
                        android:text="My Project Documentation "
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            android:text="Number Of Copy"
                            android:textColor="@color/black"
                            android:textSize="8sp" />

                        <EditText
                            android:id="@+id/f_n_copy1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:inputType="numberDecimal"
                            android:text="1"
                            android:textAlignment="center"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <Button
                        android:id="@+id/delete1"
                        android:layout_width="65dp"
                        android:layout_height="34dp"
                        android:background="@null"
                        android:drawableLeft="@drawable/ic_delete_semal"
                        android:paddingLeft="4dp"
                        android:paddingTop="0dp"
                        android:paddingRight="4dp"
                        android:paddingBottom="0dp"
                        android:text="Delete"
                        android:textSize="8sp"
                        app:layout_constraintLeft_toRightOf="@+id/uploadfile"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/dec" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/file2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/item_shape_background"
                    android:gravity="center"
                    android:visibility="gone"
                    android:orientation="horizontal"
                    android:padding="6dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/file1">

                    <ImageView
                        android:id="@+id/f_icon2"
                        android:layout_width="45dp"
                        android:layout_height="40dp"
                        android:src="@drawable/word" />

                    <TextView
                        android:id="@+id/f_name2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:maxLines="2"
                        android:text="My Project Documentation "
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            android:text="Number Of Copy"
                            android:textColor="@color/black"
                            android:textSize="8sp" />

                        <EditText
                            android:id="@+id/f_n_copy2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:inputType="numberDecimal"
                            android:text="1"
                            android:textAlignment="center"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <Button
                        android:id="@+id/delete2"
                        android:layout_width="65dp"
                        android:layout_height="34dp"
                        android:background="@null"
                        android:drawableLeft="@drawable/ic_delete_semal"
                        android:paddingLeft="4dp"
                        android:paddingTop="0dp"
                        android:paddingRight="4dp"
                        android:paddingBottom="0dp"
                        android:text="Delete"
                        android:textSize="8sp"
                        app:layout_constraintLeft_toRightOf="@+id/uploadfile"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/dec" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/file3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/item_shape_background"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    android:padding="6dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/file2">

                    <ImageView
                        android:id="@+id/f_icon3"
                        android:layout_width="45dp"
                        android:layout_height="40dp"
                        android:src="@drawable/word" />

                    <TextView
                        android:id="@+id/f_name3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:maxLines="2"
                        android:text="My Project Documentation "
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            android:text="Number Of Copy"
                            android:textColor="@color/black"
                            android:textSize="8sp" />

                        <EditText
                            android:id="@+id/f_n_copy3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:inputType="numberDecimal"
                            android:text="1"
                            android:textAlignment="center"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <Button
                        android:id="@+id/delete3"
                        android:layout_width="65dp"
                        android:layout_height="34dp"
                        android:background="@null"
                        android:drawableLeft="@drawable/ic_delete_semal"
                        android:paddingLeft="4dp"
                        android:paddingTop="0dp"
                        android:paddingRight="4dp"
                        android:paddingBottom="0dp"
                        android:text="Delete"
                        android:textSize="8sp"
                        app:layout_constraintLeft_toRightOf="@+id/uploadfile"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/dec" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/file4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/item_shape_background"
                    android:gravity="center"
                    android:visibility="gone"
                    android:orientation="horizontal"
                    android:padding="6dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/file3">

                    <ImageView
                        android:id="@+id/f_icon4"
                        android:layout_width="45dp"
                        android:layout_height="40dp"
                        android:src="@drawable/word" />

                    <TextView
                        android:id="@+id/f_name4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:maxLines="2"
                        android:text="My Project Documentation "
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            android:text="Number Of Copy"
                            android:textColor="@color/black"
                            android:textSize="8sp" />

                        <EditText
                            android:id="@+id/f_n_copy4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:inputType="numberDecimal"
                            android:text="1"
                            android:textAlignment="center"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <Button
                        android:id="@+id/delete4"
                        android:layout_width="65dp"
                        android:layout_height="34dp"
                        android:background="@null"
                        android:drawableLeft="@drawable/ic_delete_semal"
                        android:paddingLeft="4dp"
                        android:paddingTop="0dp"
                        android:paddingRight="4dp"
                        android:paddingBottom="0dp"
                        android:text="Delete"
                        android:textSize="8sp"
                        app:layout_constraintLeft_toRightOf="@+id/uploadfile"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/dec" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/file5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/item_shape_background"
                    android:gravity="center"
                    android:visibility="gone"
                    android:orientation="horizontal"
                    android:padding="6dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/file4">

                    <ImageView
                        android:id="@+id/f_icon5"
                        android:layout_width="45dp"
                        android:layout_height="40dp"
                        android:src="@drawable/word" />

                    <TextView
                        android:id="@+id/f_name5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:maxLines="2"
                        android:text="My Project Documentation "
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            android:text="Number Of Copy"
                            android:textColor="@color/black"
                            android:textSize="8sp" />

                        <EditText
                            android:id="@+id/f_n_copy5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:inputType="numberDecimal"
                            android:text="1"
                            android:textAlignment="center"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <Button
                        android:id="@+id/delete5"
                        android:layout_width="65dp"
                        android:layout_height="34dp"
                        android:background="@null"
                        android:drawableLeft="@drawable/ic_delete_semal"
                        android:paddingLeft="4dp"
                        android:paddingTop="0dp"
                        android:paddingRight="4dp"
                        android:paddingBottom="0dp"
                        android:text="Delete"
                        android:textSize="8sp"
                        app:layout_constraintLeft_toRightOf="@+id/uploadfile"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/dec" />

                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <TextView
        android:id="@+id/cost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/cost"
        android:textAlignment="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scroll"
        app:layout_constraintBottom_toTopOf="@+id/print"/>

    <Button
        android:id="@+id/print"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:drawableLeft="@drawable/ic_print"
        android:text="Send"
        android:textAlignment="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cost"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>